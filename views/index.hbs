<div class="bg-dark p-5 rounded mt-3 w-100 d-flex justify-content-center">
    <form action="/cad" method="post" class="w-50">
        <div class="row d-flex flex-column justify-content-center align-items-center">
            <h1 class="text-white text-center">Cadastrar</h1>
            <div class="col-md-10">
                {{>_msg}}
                <label for="name" class="form-label text-white mt-4">Nome completo</label>
                <input type="text" class="form-control py-3" name="name" placeholder="Cadastre seu nome" required>
            </div>
            <div class="col-md-10">
                <label for="password" class="form-label text-white mt-4">E-mail</label>
                <input type="email" class="form-control py-3" name="email" placeholder="Cadastre seu email" required>
            </div>
            <div class="col-md-10">
                <button class="mt-3 p-3 w-100 btn btn-success">Cadastrar</button>
            </div>
        </div>
    </form>
</div>